{
    "compilerOptions": {
        "rootDir": ".",
        "noEmit": true,

        "composite": true,
        "importHelpers": true,
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,

        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",

        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["test/fixtures/**/*"]
}
